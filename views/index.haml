!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title= 'PasswordStrengthMeter.com - Test the Strength of Your Password'
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %link{ :href => "stylesheets/blueprint/screen.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }
    %link{ :href => "stylesheets/blueprint/print.css", :rel => "stylesheet", :media => "print", :type => "text/css" }
    %link{ :href => "stylesheets/application.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }
  %body
    .container
      %form{:id => 'password_meter_form', :method=>'', :action=>''}
        %label
          Enter a Password:
        %input{:type=>'password', :name=>'password', :id => 'password'}
        #checkmark
        #pwdTest
          Password Strength:
          %span#meterEmpty
          %span#meterFull
          %span#Words
    %script{:src => "javascripts/jquery-1.4.2.min.js", :type => "text/javascript"}
    %script{:src => "javascripts/password-meter.js", :type => "text/javascript"}
    %script{:src => "javascripts/application.js", :type => "text/javascript"}


